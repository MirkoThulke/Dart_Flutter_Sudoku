{
  "version": "2.0.0",
  "tasks": [
    // -----------------------------
    // Host build tasks
    // -----------------------------
    {
      "label": "update-device-id",
      "type": "shell",
      "command": "./scripts/update_device.sh",
      "problemMatcher": []
    },
    {
      "label": "clean-flutter-host",
      "type": "process",
      "command": "wsl",
      "args": ["bash", "-ic", "./scripts/clean_flutter.sh"],
      "options": {
      "cwd": "${workspaceFolder}"  // <-- ensure the script runs from project root
      },
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "build-flutter-host-debug",
      "type": "process",
      "command": "wsl",
      "args": ["bash", "-ic", "./scripts/build_flutter.sh", "debug"],
      "options": {
      "cwd": "${workspaceFolder}"  // <-- ensure the script runs from project root
      },
      "problemMatcher": [],
      "dependsOn": ["update-device-id"]
    },
    {
      "label": "build-all-host-debug",
      "type": "shell",
      "command": "./scripts/build_all.sh",
      "args": ["debug"],
      "problemMatcher": [],
      "dependsOn": ["update-device-id"]
    },
    {
      "label": "build-all-host-profile",
      "type": "shell",
      "command": "./scripts/build_all.sh profile",
      "args": ["profile"],
      "problemMatcher": [],
      "dependsOn": ["update-device-id"]
    },
    {
      "label": "build-all-host-release",
      "type": "shell",
      "command": "./scripts/build_all.sh release",
      "args": ["release", "--clean"],
      "problemMatcher": [],
      "dependsOn": ["update-device-id"]
    },


    // -----------------------------
    // Docker build tasks
    // -----------------------------
    {
      "label": "clean-flutter-docker",
      "type": "shell",
      "command": "docker",
      "args": [
      "run",
      "--rm",
      "-v", "/c/Programming/Apps_Mirko/sudoku:/app",
      "-w", "/app",
      "flutter_rust_env",
      "./scripts/clean_flutter.sh"
      ],
      "problemMatcher": [],
      "isBackground": false
    },
    {
      "label": "build-flutter-docker-debug",
      "type": "shell",
      "command": "docker",
      "args": [
      "run",
      "--rm",
      "-v", "/c/Programming/Apps_Mirko/sudoku:/app",
      "-w", "/app",
      "flutter_rust_env",
      "./scripts/build_flutter.sh", "debug"
      ],
      "problemMatcher": [],
      "dependsOn": ["update-device-ip"],
      "isBackground": false
    },
    {
      "label": "build-all-docker-debug",
      "type": "shell",
      "command": "docker",
      "args": [
      "run",
      "--rm",
      "-v", "/c/Programming/Apps_Mirko/sudoku:/app",
      "-w", "/app",
      "flutter_rust_env",
      "./scripts/build_all.sh", "debug"
      ],
      "problemMatcher": [],
      "dependsOn": ["update-device-ip"],
      "isBackground": false
    },
    {
      "label": "build-all-docker-profile",
      "type": "shell",
      "command": "docker",
      "args": [
      "run",
      "--rm",
      "-v", "/c/Programming/Apps_Mirko/sudoku:/app",
      "-w", "/app",
      "flutter_rust_env",
      "./scripts/build_all.sh", "profile"
      ],
      "problemMatcher": [],
      "dependsOn": ["update-device-ip"],
      "isBackground": false
    },
    {
      "label": "build-all-docker-release",
      "type": "shell",
      "command": "docker",
      "args": [
      "run",
      "--rm",
      "-v", "/c/Programming/Apps_Mirko/sudoku:/app",
      "-w", "/app",
      "flutter_rust_env",
      "./scripts/build_all.sh", "release", "--clean"
      ],
      "problemMatcher": [],
      "dependsOn": ["update-device-ip"],
      "isBackground": false
    }


  ]
}



