{
  "version": "0.2.0",
  "configurations": [
    // -----------------------------
    // Host builds
    // -----------------------------
    {
      "name": "sudoku ( Configure WSL to use Windows ADB daemon)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/scripts/update_device.dart",
      "preLaunchTask": "setup-adb-wsl",
      "noDebug": true
    },
    {
      "name": "sudoku (flutter clean - host)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/scripts/clean_flutter.dart",
      "preLaunchTask": "clean-flutter-host",
      "noDebug": true
    },
    {
      "name": "sudoku (usb debug flutter - host)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-flutter-host-debug"
    },
    {
      "name": "sudoku (usb debug all - host)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-host-debug"
    },
    {
      "name": "sudoku (usb profile all - host)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-host-profile"
    },
    {
      "name": "sudoku (usb release all - host)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-host-release"
    },
    // -----------------------------
    // Docker builds
    // -----------------------------
    {
      "name": "sudoku (flutter clean - docker)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/scripts/clean_flutter.dart",
      "preLaunchTask": "clean-flutter-docker",
      "noDebug": true
    },
    {
      "name": "sudoku (usb debug flutter - docker)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-flutter-docker-debug"
    },
    {
      "name": "sudoku (usb debug all - docker)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-docker-debug"
    },
    {
      "name": "sudoku (usb profile all - docker)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-docker-profile"
    },
    {
      "name": "sudoku (usb release all - docker)",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "build-all-docker-release"
    },
    // --------   Integration Tests  -----
    // --------- Android device ----------
    {
      "name": "sudoku (integration-test - usb - tcp - host)",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_integration_test_ci.sh",
      "preLaunchTask": "integration-test-usb-tcp-host",
      "noDebug": true,
      "console": "terminal"
    },
    // --------- CI Headless Chrome ----------
    {
      "name": "sudoku (integration-test-ci - chrome - headless- docker)",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/integration_test/driver.dart",
      "preLaunchTask": "integration-test-ci-chrome-hadless-docker",
      "noDebug": true
    }
  ]
}

