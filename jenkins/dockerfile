# ------------------------------------------------------------
# Build image:
#   docker build -t my-jenkins:latest .

# Run container:
# docker run -d --name jenkins -p 8080:8080 -p 50000:50000 -v jenkins_home:/var/jenkins_home -v /var/run/docker.sock:/var/run/docker.sock  my-jenkins:latest
# ------------------------------------------------------------

# ------------------------------------------------------------
# Jenkins LTS base image
# ------------------------------------------------------------
FROM jenkins/jenkins:lts

# Switch to root to install tools
USER root

# ------------------------------------------------------------
# Install Docker CLI (NOT the daemon)
# ------------------------------------------------------------
RUN apt-get update && \
    apt-get install -y ca-certificates curl gnupg lsb-release && \
    rm -rf /var/lib/apt/lists/*

# Add Docker official GPG key & repository
RUN install -m 0755 -d /etc/apt/keyrings && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg \
        | gpg --dearmor -o /etc/apt/keyrings/docker.gpg && \
    chmod a+r /etc/apt/keyrings/docker.gpg && \
    echo \
      "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
      https://download.docker.com/linux/ubuntu \
      $(lsb_release -cs) stable" \
      > /etc/apt/sources.list.d/docker.list

# Install Docker CLI only
RUN apt-get update && \
    apt-get install -y docker-ce-cli && \
    rm -rf /var/lib/apt/lists/*

# ------------------------------------------------------------
# Add Jenkins user to docker group
# (Host will mount /var/run/docker.sock)
# ------------------------------------------------------------
RUN groupadd -f docker && \
    usermod -aG docker jenkins

# ------------------------------------------------------------
# Switch back to Jenkins user
# ------------------------------------------------------------
USER jenkins
